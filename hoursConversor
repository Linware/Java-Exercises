package ejercicioslibro;
import java.lang.Math;


public class conversorTiempo{
    

    public static void main (String[] args){
 
      int t=83961;
      int s=0,m=0,h=0;
      if(t>59){
          m=t/60;
          s=t%60;
      }
      if (m>59){
          h=m/60;
          m=m%60;
      }
      
      
      System.out.println("El valor de "+t+" segundos en horas es de "+h+" horas, "+m+" minutos y "+s+" segundos");
    }
}
